<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F9FAFB">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Patient"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Patient Name -->
    <EditText
        android:id="@+id/et_patient_name"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#2563EB"
        android:hint="Full Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <!-- Age -->
    <EditText
        android:id="@+id/et_patient_age"
        android:layout_width="357dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2563EB"
        android:hint="Age"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_patient_name" />

    <!-- Gender -->
    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="366dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_patient_age" />

    <!-- Contact Number -->
    <EditText
        android:id="@+id/et_patient_contact"
        android:layout_width="366dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2563EB"
        android:hint="Contact Number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_gender" />

    <!-- Address -->
    <EditText
        android:id="@+id/et_patient_address"
        android:layout_width="363dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2563EB"
        android:hint="Address"
        android:inputType="textPostalAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_patient_contact" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save_patient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Record"
        android:backgroundTint="#2563EB"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/et_patient_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
